@model SaudaMaster.SharedModel.CategoryViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Views/Categories/CategoriesPartial.cshtml", ViewBag.Categories as SaudaMaster.SharedModel.CategoryViewModel)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryDisplayName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryImage)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CategoryList)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryDisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.CategoryImage)*@
                                        <img src="@item.CategoryImage" alt="@Model.CategoryName" height="100" />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { CategoryID = item.CategoryID, @class = "btn btn-success btn-xs" })
                                        @Html.ActionLink("Delete" , "Delete", new {CategoryID = item.CategoryID, @class = "btn btn-success btn-xs" })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </section>
</section>