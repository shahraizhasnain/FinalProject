@model SaudaMaster.SharedModel.SubCategoryViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Views/SubCategory/SubCategoryPartial.cshtml", ViewBag.data as SaudaMaster.SharedModel.SubCategoryViewModel)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubCategoryDisplayName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubCategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubCategoryImage)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SubCategoryList)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubCategoryDisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubCategoryName)
                                    </td>
                                    <td>

                                        <img src="@item.SubCategoryImage" alt="@Model.SubCategoryName" height="100" />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { SubCategoryID = item.SubCategoryID, @class = "btn btn-success btn-xs" }) |
                                        @Html.ActionLink("Delete", "Delete", new { SubCategoryID = item.SubCategoryID })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </section>
</section>