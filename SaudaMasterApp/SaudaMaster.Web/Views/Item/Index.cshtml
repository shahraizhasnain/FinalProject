@model SaudaMaster.SharedModel.ItemViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="main-content">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("~/Views/Item/ItemPartial.cshtml", ViewBag.data as SaudaMaster.SharedModel.ItemViewModel)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemPrice)
                                </th>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemAvailability)
                                </th>
                                
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemDiscountPercentage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ItemImage)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ItemList)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemAvailability)
                                    </td>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ItemDiscountPercentage)
                                    </th>

                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.ItemImage)*@
                                        <img src="@item.ItemImage" alt="@Model.ItemName" height="100" />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { ItemID = item.ItemID, @class = "btn btn-success btn-xs" }) |
                                        @Html.ActionLink("Delete", "Delete", new { ItemID = item.ItemID })
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </section>
</section>